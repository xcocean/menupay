<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bgGray"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/llBootmMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/llBootmMenuImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ico_tab_menu_2" />

            <TextView
                android:id="@+id/llBootmMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="菜单"
                android:textColor="@color/clickBlue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBootmOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/llBootmOrderImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ico_tab_order_1" />

            <TextView
                android:id="@+id/llBootmOrderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="订单"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBootmUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/llBootmUserImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ico_tab_user_1" />

            <TextView
                android:id="@+id/llBootmUserText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="用户"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>